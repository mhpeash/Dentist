@model ProjectDentistWebApp.Models.Account

@{
    ViewBag.Title = "Registration";
}



<div class="row" style="margin-top: 100px;margin-bottom: 100px">
    <div class="col-sm-2"></div>
    
    <div class="col-sm-8">
        
        <div class="well">

                <span class="glyphicon glyphicon-user" style="color:purple"><h2>REGISTRATION</h2></span>
     

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    <hr />
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.LabelFor(model => model.FirstName, new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.FirstName)
                            @Html.ValidationMessageFor(model => model.FirstName)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.LastName, new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.LastName)
                            @Html.ValidationMessageFor(model => model.LastName)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Area, new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Area)
                            @Html.ValidationMessageFor(model => model.Area)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.UserName)
                            @Html.ValidationMessageFor(model => model.UserName)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Password)
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-5 col-md-7">
                            <input type="submit" value="Register" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

            
        </div>
    </div>
    <div class="col-sm-2"></div>

    
</div>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
